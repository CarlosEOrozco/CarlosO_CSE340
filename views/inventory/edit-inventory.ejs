<%- include('../partials/header') %>
<%- include('../partials/navigation', { nav }) %>

<main class="form-container">
  <h1><%= title %></h1>
  
  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <% if (errors) { %>
    <ul class="errors">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/update" method="POST" class="inventory-form">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    
    <div class="form-group">
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>

    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" required
        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_make') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" required
        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_model') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" required
        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_year') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required
        class="<%= errors && errors.array().some(e => e.param === 'inv_description') ? 'invalid' : '' %>"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    </div>

    <div class="form-group">
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" required
        value="<%= typeof inv_image !== 'undefined' ? inv_image : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_image') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
        value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_thumbnail') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="number" step="0.01" id="inv_price" name="inv_price" required
        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_price') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" required
        value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_miles') ? 'invalid' : '' %>">
    </div>

    <div class="form-group">
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" required
        value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
        class="<%= errors && errors.array().some(e => e.param === 'inv_color') ? 'invalid' : '' %>">
    </div>

    <button type="submit" class="btn-submit">Update Vehicle</button>
  </form>
</main>

<%- include('../partials/footer') %>