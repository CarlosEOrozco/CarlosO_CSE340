<%- include('../partials/header') %>
<%- include('../partials/navigation', { nav }) %>

<main class="management-container">
  <h1><%= title %></h1>
  
  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <div class="management-actions">
    <div class="action-card">
      <h2>Add New Classification</h2>
      <p>Create new vehicle classifications</p>
      <a href="/inv/add-classification" class="btn-action">Add Classification</a>
    </div>
    
    <div class="action-card">
      <h2>Add New Vehicle</h2>
      <p>Add vehicles to inventory</p>
      <a href="/inv/add-inventory" class="btn-action">Add Vehicle</a>
    </div>
  </div>

  <!-- Inventory Management Section -->
  <div class="inventory-management">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to view inventory items:</p>
    
    <!-- Classification Selection Dropdown -->
    <% if (classificationSelect) { %>
      <%- classificationSelect %>
    <% } %>

    <!-- Inventory Display Table -->
    <table id="inventoryDisplay" class="inventory-table"></table>

    <!-- No JavaScript Warning -->
    <noscript>
      <p class="error-message">JavaScript must be enabled to use this page.</p>
    </noscript>
  </div>
</main>

<!-- Include JavaScript for AJAX functionality -->
<script src="/js/inventoryManagement.js" defer></script>
<script src="../../js/inventory.js"></script>

<%- include('../partials/footer') %>