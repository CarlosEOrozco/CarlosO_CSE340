<main class="account-management">
    <h1><%= title %></h1>
    
    <% if (message) { %>
      <div class="flash-message"><%= message %></div>
    <% } %>
  
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <div class="account-info">
      <p>You're logged in!</p>
      <!-- Future account management content will go here -->
    </div>
</main>