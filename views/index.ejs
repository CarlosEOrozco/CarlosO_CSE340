<%- messages() %>

<!-- Hero Section -->
<section class="hero">
    <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean" class="hero__image">
    <div class="hero__content">
        <h2 class="hero__title">DMC Delorean</h2>
        <ul class="features">
            <li class="features__item">3 Cup holders</li>
            <li class="features__item">Superman doors</li>
            <li class="features__item">Fuzzy dice</li>
        </ul>
        <button class="cta">Own Today</button>
    </div>
</section>

<!-- Upgrades & Reviews Columns -->
<div class="columns">
    <section class="upgrades">
    <h3 class="section-title">Delorean Upgrades</h3>
    <div class="upgrade-grid">
        <a href="/upgrade/flux-capacitor" class="upgrade-item">
            <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor" class="upgrade-image">
            <p class="upgrade-name">Flux Capacitor</p>
        </a>
        <a href="/upgrade/flame-decals" class="upgrade-item">
            <img src="/images/upgrades/flame.jpg" alt="Flame Decals" class="upgrade-image">
            <p class="upgrade-name">Flame Decals</p>
        </a>
        <a href="/upgrade/bumper-stickers" class="upgrade-item">
            <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers" class="upgrade-image">
            <p class="upgrade-name">Bumper Stickers</p>
        </a>
        <a href="/upgrade/hub-caps" class="upgrade-item">
            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps" class="upgrade-image">
            <p class="upgrade-name">Hub Caps</p>
        </a>
    </div>
    </section>

    <section class="reviews">
        <h3 class="section-title">DMC Delorean Reviews</h3>
        <ul class="review-list">
            <li class="review-list__item">"So fast it's almost like traveling in time." (4/5)</li>
            <li class="review-list__item">"Coolest ride on the road." (4/5)</li>
            <li class="review-list__item">"I'm feeling McFly!" (5/5)</li>
            <li class="review-list__item">"The most futuristic ride of our day." (4.5/5)</li>
            <li class="review-list__item">"80's livin and I love it!" (5/5)</li>
        </ul>
    </section>
</div>